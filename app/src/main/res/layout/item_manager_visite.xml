<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dip">

    <LinearLayout
        android:id="@+id/lyt_item_visite_manager"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dip"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconVisiteItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:contentDescription="visite"
            android:src="@drawable/leclerc" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyt_scd"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/lyt_item_visite_manager"
        android:orientation="horizontal"
        android:singleLine="true"
        android:weightSum="4">

        <TextView
            android:id="@+id/visite_date"
            android:layout_width="0dp"
            android:layout_height="26dip"
            android:layout_weight="2"
            android:text="24/12/2019"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/visite_state"
            android:layout_width="0dp"
            android:layout_height="26dip"
            android:layout_weight="2"
            android:singleLine="true"
            android:text="Visite OK"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/lyt_scd"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/lyt_item_visite_manager"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/visite_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="LECLERC Saint Berthevin"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/visite_btn_edit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="@color/white" />

            <ImageButton
                android:id="@+id/visite_btn_delete"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="@color/white" />

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>