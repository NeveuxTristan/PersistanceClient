<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dip">

    <LinearLayout
        android:id="@+id/lyt_visite"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dip"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icVisiteItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:contentDescription="visite"
            android:src="@drawable/leclerc" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyt_scd"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/lyt_visite"
        android:orientation="horizontal"
        android:singleLine="true"
        android:weightSum="5">

        <TextView
            android:id="@+id/visite_item_date"
            android:layout_width="0dp"
            android:layout_height="26dip"
            android:layout_weight="3"
            android:text="24/12/2019"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/visite_item_state"
            android:layout_width="0dp"
            android:layout_height="26dip"
            android:layout_weight="2"
            android:singleLine="true"
            android:text="Visit TO DO"
            android:textColor="#333333"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/lyt_scd"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/lyt_visite"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/visite_item_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="LECLERC Saint Berthevin"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/visite_item_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="13sp"
            android:gravity="center"
            android:text="This is a commentary.."
            android:padding="5dp" />


    </LinearLayout>


</RelativeLayout>